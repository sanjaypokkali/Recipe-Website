<%- include('partials/header') %>

<div class="container">
    <div class="container mt-3">
        <div class="row">
            <div class="card-deck">
                <% recipeItems.forEach(function(recipe) { %>
                    <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                        <img src="<%= recipe.image %>" class="card-img-top" width="300" height="215">
                        <div class="card-body">
                            <h4 class="card-title"><%= recipe.title %></h4>
                            <p><span ><strong>Made By:</strong></span> <%= recipe.userID %></p>
                            <a href="/<%=recipe._id%>" class="btn btn-light">Go to Recipe</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

